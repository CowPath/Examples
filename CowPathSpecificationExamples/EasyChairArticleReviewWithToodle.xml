<scxml version="1.0" xmlns="http://www.w3.org/2005/07/scxml" 
	clock="true" notes="true" previewEnable="false" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <webflow id="reviewArticle" initial="allReviews">
	<state id="allReviews" URLPattern="*www.easychair.org/conferences/review_all.cgi?*">
	  <transition event="HOST:CLICK" cond="['//*[@src='/images/add.png']/..']" 
					  target="addReview"/>
	  <transition event="HOST:CLICK" cond="['//*[@src='/images/about.png']/..']" 
		  			  target="submissionInfo"/>
	  <transition event="COWPATH:CLICK" cond="['addToDo']" 
					  target="Toodledo">
		<script>
		  GoTo("www.toodledo.com/tasks/index.php#").
		  Click("//*[@id='tlbr_new']").
		  Paste("$reviewTitles").Into("//*[@id='title']");
		</script>
	  </transition>
	  <onentry>
		<script>
		  Copy("//*[@class='oddgreen']/td[2]/i/text()").Into("$reviewTitles");
		</script>
	  </onentry>
	</state>
	<state id="Toodledo" URLPattern="*www.toodledo.com/tasks/index.php#">
	  <transition event="COWPATH:CLICK" cond="['back2easychair']" target="allReviews"/>
	</state>
	<state id="addReview" URLPattern="*www.easychair.org/conferences/review_add.cgi?*">
	  <transition event="HOST:CLICK" cond="['//td[@title='reviews for papers assigned to you']']" 
					  target="allReviews"/>
	  <transition event="COWPATH:CLICK" cond="['checkAuthorWorks']" 
		 			  target="dblp">
		<script>
		  GoTo("dblp.uni-trier.de/").
		  Paste("$author").Into("//div[@id='main']/center/table/tbody/tr/td/form/input[1]").
		  Click("//*[@VALUE='Submit']");
		</script>
	  </transition>
	  <onentry>
		<script>
		  Copy("//*[text()='Authors:']/../../td[2]/text()","(.*?)( and |,|$)").Into("$author");
		</script>
	  </onentry>
	</state>
	<state id="dblp" URLPattern="*dblp.uni-trier.de/pers/*">
	  <transition event="COWPATH:CLICK" cond="['back2article']" target="addReview"/>
	</state>
	<state id="submissionInfo" URLPattern="*www.easychair.org/conferences/submission_info_show.cgi?*">
	  <transition event="HOST:CLICK" cond="['//td[@title='reviews for papers assigned to you']']" 
					  target="allReviews"/>
	  <transition event="COWPATH:CLICK" cond="['check4plagiarism']" 
					  target="grammarReport">
		<script>
		  GoTo("www.grammarly.com/?alt1051=3").
		  Paste("$abstract").Into("//*[@ID='maintextarea']").
		  Click("//*[@id='check_btn']");
		</script>
	  </transition>
	  <onentry>
		<script>
		  Copy("//*[text()='Abstract:']/../td[2]/text()").Into("$abstract");
		</script>
	  </onentry>
	</state>
	<state id="grammarReport" URLPattern="*ed.grammarly.com/register/signup/report_pale/?newv=1">
	  <transition event="COWPATH:CLICK" cond="['back2article']" target="submissionInfo"/>
	</state>
  </webflow>
</scxml>







