<scxml version="1.0" xmlns="http://www.w3.org/2005/07/scxml" 
	clock="true" notes="true" previewEnable="false" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<webflow id="manuscriptReview">
		<state id="flow1" initial="submissionInfo">
			<state id="submissionInfo" URLPattern="https://www.easychair.org/conferences/submission_info_show.cgi?*">
				<transition event="COWPATH:CLICK" cond="['check4plagiarism']" target="plagiarismReport">
					<script>
						GoTo("http://www.grammarly.com/").
						Paste("$abstract").Into("//*[@ID='maintextarea']").
						Click("//*[@id='check_btn']");
					</script>
				</transition>
				<onentry>
					<script>Copy("//*[text()='Abstract:']/../td[2]/text()").Into("$abstract");</script>
				</onentry>
			</state>
			<state id="plagiarismReport" URLPattern="https://ed.grammarly.com/register/signup/report_pale/*">
				<transition event="COWPATH:CLICK" cond="['back2article']" target="submissionInfo"/>
			</state>
		</state>
		<state id="flow2" initial="addReview">
			<state id="addReview" URLPattern="https://www.easychair.org/conferences/review_add.cgi?*">
				<transition event="COWPATH:CLICK" cond="['split('//*[@id='reviewform']//td/b[text()='Authors:']/../../td[2]',' and |,')']" 
					target="authorPublications">
					<script>
						GoTo("http://dblp.uni-trier.de/").
						Paste("$firstAuthor").Into("//div[@id='main']/center/table/tbody/tr/td/form/input[1]").
						Click("//*[@VALUE='Submit']");
					</script>
				</transition>
				<onentry>
					<script>Copy("text()").Into("$firstAuthor");</script>
				</onentry>
			</state>
			<state id="authorPublications" URLPattern="http://dblp.uni-trier.de/pers/*">
				<transition event="COWPATH:CLICK" cond="['back2review']" target="addReview"/>
				<transition event="HOST:CLICK" cond="['//li[contains(@id,'13')]/nav/ul/li[2]/div/a']" target="bibtex2013"/>
			</state>
			<state id="bibtex2013" URLPattern="http://dblp.uni-trier.de/rec/bibtex/*13">
				<transition event="COWPATH:CLICK" cond="['back2authorPublications']" target="authorPublications"/>
			</state>
		</state>
	</webflow>
</scxml>



