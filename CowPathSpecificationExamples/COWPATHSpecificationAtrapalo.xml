<scxml version="1.0" xmlns="http://www.w3.org/2005/07/scxml" 
	clock="true" notes="true" previewEnable="false" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<webflow id="travelInformation" initial="atrapalo">
		<state id="atrapalo" URLPattern="http://www.atrapalo.com/vuelos/resultados_ajax/*">
			<transition event="COWPATH:CLICK" cond="['checkWeather']" target="eltiempo">
				<script>
					GoTo("http://www.eltiempo.es/").
					Paste("$city").Into("//input[@class='ac_input' and @id='q']").
					Click("//p[@class='submit' and position()=2]/input");
				</script>
			</transition>
			<transition event="COWPATH:CLICK" cond="['checkInformation']" target="wikipedia">
				<script>
					GoTo("http://www.wikipedia.org/").
					Paste("$city").Into("*//input[@id='searchInput']").
					Click("*//input[@class='formBtn']");
				</script>
			</transition>
			<onentry>
				<script>Copy("//span[@class='block' and position()=2]/span[@class='bold']").Into("$city");</script>
			</onentry>
		</state>
		<state id="eltiempo" URLPattern="http://www.eltiempo.es/*">
			<transition event="COWPATH:CLICK" cond="['back2atrapalo']" target="atrapalo"/>
		</state>
		<state id="wikipedia" URLPattern="http://en.wikipedia.org/wiki/*">
			<transition event="COWPATH:CLICK" cond="['back2atrapalo']" target="atrapalo"/>
		</state>
	</webflow>
</scxml>

