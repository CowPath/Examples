<scxml version="1.0" xmlns="http://www.w3.org/2005/07/scxml" 
	clock="true" notes="true" previewEnable="false" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
	<webflow id="countryInfo" initial="openconcept">
		<state id="openconcept" URLPattern="http://openconcept.ca/blog/mgifford/text-list-all-countries-world">
			<transition event="COWPATH:CLICK" 
						cond="['split('//*[@class='field-item even']/pre','\\n')']" target="wikipedia">
				<script>
					GoTo("http://www.wikipedia.org/").
					Paste("$country").Into("*//input[@id='searchInput']").
					Click("*//input[@class='formBtn']");
				</script>
			</transition>
			<onentry>
				<script>Copy("text()").Into("$country");</script>
			</onentry>
		</state>
		<state id="wikipedia" URLPattern="http://en.wikipedia.org/wiki/*">
			<transition event="COWPATH:CLICK" cond="['back2openconcept']" target="openconcept"/>
		</state>
	</webflow>
</scxml>




